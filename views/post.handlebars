
<div>
   
    <h2>{{postData.dataValues.post_header}}</h2>
    <p>Posted by: {{postData.dataValues.user_id}}</p>
    <p>{{postData.dataValues.body}}</p>
   
    {{#each postData.comments as |comment|}}
    <div class="comment">
    <img src="/assets/" alt="" width="150" height="150" class = "avatar">
<p id= "commentInfo">User# {{comment.dataValues.user_id}} said: <div id = "commentText"> {{comment.dataValues.body}}</div>
</p>
</div>
    {{/each}}

    {{!-- New comment form --}}

<div class = "commentArea"> 
<div id = "comment-form">
  <div >
    <h3>Add a New Comment:</h3>
    <form class="form">
       <p>Tell them!</p>
      <div class="form-group ">
        <label for="comment">
        </label>
        <textarea class="form-input" id="comment" name="comment-content"></textarea>
      </div>
      <div class="form-group mx-auto" id="comment-button">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>
</div>
</div>
    
</div>
